<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>expenses</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="row">

            
            <% locals.listItems %>
            <% listItems.forEach(item => { %>
            <div>
                <form action="/edit/<%=item.expense_id%>" method="post">
                <div class="card col-4" style="width: 9rem; height: 9rem;">
                    <div class="card-body">
                      <h5 class="card-title"><%=item.amount%></h5>
                      <h5 ><%=item.category%></h5>
                      <p><%=item.timestamp%></p>
                      <p><%=item.note%></p>
                      <a href="/delete/<%=item.expense_id%>" class="btn btn-danger">delete</a>
                      <a href="/edit/<%=item.expense_id%>" class="btn btn-success">Edit</a>
                    </div>
                  </div>
                </form>
               
                
                
            </div>
           
        </div>

            
        </div>
    <% }) %>
    <form class="item" action="/add" method="post">
        <input type="number" name="newAmount" placeholder="Amount" autocomplete="off" autofocus="true" />
        <input type="text" name="newCategory" placeholder="Category" autocomplete="off" autofocus="true" />
        <input type="text" name="newNote" placeholder="Note" autocomplete="off" autofocus="true" />
        <button class="add" type="submit" name="list" value=<%=listTitle %> >+</button>
      </form>
    <form class="item" action="/edit" method="post">
        <input type="number" name="newAmount" placeholder="Edit Amount" autocomplete="off" autofocus="true" />
        <button class="add" type="submit" name="list" value=<%=listTitle %> >Edit</button>
     </form>  

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>