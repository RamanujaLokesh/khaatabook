<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>groups</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

</head>
<body>
       <!-- <a href="/joingroup" class="btn btn-danger">join group</a>  -->
       <a href="/creategroup" class="btn btn-danger">create group</a>

       <form action="/joingroup" method="post">
        <input type="number" placeholder="group code to join" name="groupcode">
        <input type="submit" value="join">
       </form>

<% locals.msg %>
<% if (msg) { %>
 
    <h1 style="color: brown;"><%=msg %></h1>
    <% } %>

<%if(locals.groups){%>
<h2><%=groups[0].group_name%></h2>
    
    <% for(let group of groups) { %>
        
        <div class="card" style="height: 7rem; width: 7rem;">
        <h5 class="card-header"><%= group.group_name %></h5>
        <div class="card-body">
            <h5 class="card-title"><%= group.group_code %></h5>
            <a href="#" class="btn btn-primary">open group</a>
        </div>
    </div>
    
    <% } };%>
    
    <%  %> 
</body>
</html>